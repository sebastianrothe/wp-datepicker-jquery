{
  // enable format and fix on save
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },

  // PRETTIER
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // STYLELINT: disable built-in style validation
  "css.validate": false
}
